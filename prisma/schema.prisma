// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  MANAGER
  CASHIER
  WAITER
  KITCHEN
  STORE
  PURCHASE
  HR
  STAFF
}

enum PurchaseOrderStatus {
  DRAFT
  APPROVED
  PARTIALLY_RECEIVED
  RECEIVED
  CANCELLED
}

enum StockMoveType {
  PURCHASE
  CONSUMPTION
  WASTAGE
  ADJUSTMENT
  RETURN
}

enum PaymentMethod {
  CASH
  CARD
  UPI
  BANK_TRANSFER
  CHEQUE
  OTHER
}

//////////////////////////////////////////////////////
// USERS
//////////////////////////////////////////////////////

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  phone        String?  @unique
  passwordHash String
  role         Role     @default(STAFF)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orders    Order[]   @relation()
}

//////////////////////////////////////////////////////
// SUPPLIERS
//////////////////////////////////////////////////////

model Supplier {
  id             String            @id @default(uuid())
  name           String
  email          String?
  phone          String?
  address        String?
  gstNumber      String?
  metadata       Json?
  isActive       Boolean           @default(true)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  purchaseOrders PurchaseOrder[]
  goodsReceipts  GoodsReceipt[]
  payments       SupplierPayment[]
}

//////////////////////////////////////////////////////
// INVENTORY ITEMS
//////////////////////////////////////////////////////

model InventoryItem {
  id             String            @id @default(uuid())
  name           String
  sku            String?           @unique
  unit           String
  minStockLevel  Decimal?          @db.Decimal(12,3)
  metadata       Json?
  isActive       Boolean           @default(true)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  batches        InventoryBatch[]
  stockItem      StockItem?
}

//////////////////////////////////////////////////////
// PURCHASE ORDER
//////////////////////////////////////////////////////

model PurchaseOrder {
  id             String                @id @default(uuid())
  supplier       Supplier              @relation(fields: [supplierId], references: [id])
  supplierId     String
  status         PurchaseOrderStatus   @default(DRAFT)
  orderDate      DateTime              @default(now())
  expectedDate   DateTime?
  notes          String?
  items          Json?                 // [{ inventoryItemId, quantity, price }]
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt

  goodsReceipts  GoodsReceipt[]
}

//////////////////////////////////////////////////////
// GOODS RECEIPT (GRN)
//////////////////////////////////////////////////////

model GoodsReceipt {
  id              String           @id @default(uuid())
  supplier        Supplier         @relation(fields: [supplierId], references: [id])
  supplierId      String
  purchaseOrder   PurchaseOrder?   @relation(fields: [purchaseOrderId], references: [id])
  purchaseOrderId String?
  receiptNumber   String?          @unique
  isDirect        Boolean          @default(false)
  receivedDate    DateTime         @default(now())
  remarks         String?
  items           Json             // [{ inventoryItemId, qty, costPrice, expiry }]
  metadata        Json?
  createdAt       DateTime         @default(now())
}

//////////////////////////////////////////////////////
// BATCHES
//////////////////////////////////////////////////////

model InventoryBatch {
  id              String         @id @default(uuid())
  inventoryItem   InventoryItem  @relation(fields: [inventoryItemId], references: [id])
  inventoryItemId String
  batchNumber     String
  costPrice       Decimal        @db.Decimal(10,2)
  quantity        Decimal        @db.Decimal(12,3)
  expiryDate      DateTime?
  createdAt       DateTime       @default(now())
}

//////////////////////////////////////////////////////
// STOCK
//////////////////////////////////////////////////////

model StockItem {
  id              String         @id @default(uuid())
  inventoryItem   InventoryItem  @relation(fields: [inventoryItemId], references: [id])
  inventoryItemId String @unique
  quantity        Decimal        @db.Decimal(12,3)
  metadata        Json?
  updatedAt       DateTime       @updatedAt

  movements       StockMovement[]
}

model StockMovement {
  id              String         @id @default(uuid())
  stockItem       StockItem      @relation(fields: [stockItemId], references: [id])
  stockItemId     String
  type            StockMoveType
  quantity        Decimal        @db.Decimal(12,3)
  reference       String?
  extra           Json?
  createdAt       DateTime       @default(now())
}

//////////////////////////////////////////////////////
// SUPPLIER PAYMENTS
//////////////////////////////////////////////////////

model SupplierPayment {
  id              String      @id @default(uuid())
  supplier        Supplier     @relation(fields: [supplierId], references: [id])
  supplierId      String
  amount          Decimal      @db.Decimal(12,2)
  method          PaymentMethod
  reference       String?
  notes           String?
  metadata        Json?
  paidAt          DateTime     @default(now())

  purchaseOrderId String?
  goodsReceiptId  String?
}

// ===================== POS ENUMS =====================

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
  BLOCKED
}

enum OrderType {
  DINE_IN
  TAKEAWAY
  DELIVERY
}

enum OrderStatus {
  NEW
  CONFIRMED
  IN_KITCHEN
  READY
  SERVED
  DELIVERED
  CANCELLED
  CLOSED
}

enum KOTStatus {
  PENDING
  IN_PROGRESS
  READY
}

// ===================== MENU =====================

model MenuCategory {
  id        String       @id @default(uuid())
  name      String
  sortOrder Int          @default(0)
  isActive  Boolean      @default(true)
  metadata  Json?

  items     MenuItem[]
}

model MenuItem {
  id          String       @id @default(uuid())
  name        String
  description String?
  basePrice   Decimal      @db.Decimal(10,2)
  isActive    Boolean      @default(true)
  isVeg       Boolean?
  taxRate     Decimal?     @db.Decimal(5,2)
  metadata    Json?        // variants, addons, tags etc.

  category    MenuCategory @relation(fields: [categoryId], references: [id])
  recipe      Recipe?
  categoryId  String
}

// ===================== TABLES =====================

model Table {
  id        String       @id @default(uuid())
  name      String
  capacity  Int?
  status    TableStatus  @default(AVAILABLE)
  metadata  Json?

  orders    Order[]
}

// ===================== ORDERS / POS =====================

model Order {
  id           String      @id @default(uuid())
  orderNumber  String?     @unique
  orderType    OrderType
  status       OrderStatus @default(NEW)

  table        Table?      @relation(fields: [tableId], references: [id])
  tableId      String?

  customerName String?
  customerPhone String?
  items        Json        // [{ menuItemId, name, qty, unitPrice, totalPrice, notes, status }]
  subTotal     Decimal     @db.Decimal(12,2)
  taxAmount    Decimal     @db.Decimal(12,2)
  serviceCharge Decimal    @db.Decimal(12,2)
  discountAmount Decimal   @db.Decimal(12,2)
  grandTotal   Decimal     @db.Decimal(12,2)

  createdBy    User?       @relation(fields: [createdById], references: [id])
  createdById  String?
  closedAt     DateTime?

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  bills        PosBill[]
  kotTickets   KOT[]
  payments     PosPayment[]
}

// ===================== KITCHEN KOT =====================

model KOT {
  id         String     @id @default(uuid())
  order      Order      @relation(fields: [orderId], references: [id])
  orderId    String
  status     KOTStatus  @default(PENDING)
  items      Json       // subset of order items or same structure
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

// ===================== POS BILLING =====================

model PosBill {
  id            String    @id @default(uuid())
  billNumber    String    @unique
  order         Order     @relation(fields: [orderId], references: [id])
  orderId       String

  subTotal      Decimal   @db.Decimal(12,2)
  taxAmount     Decimal   @db.Decimal(12,2)
  serviceCharge Decimal   @db.Decimal(12,2)
  discountAmount Decimal  @db.Decimal(12,2)
  grandTotal    Decimal   @db.Decimal(12,2)

  createdAt     DateTime  @default(now())
  metadata      Json?

  payments      PosPayment[]
}

// POS payments (customer-facing, separate from SupplierPayment)
model PosPayment {
  id          String        @id @default(uuid())
  order       Order         @relation(fields: [orderId], references: [id])
  orderId     String
  bill        PosBill?      @relation(fields: [billId], references: [id])
  billId      String?

  amount      Decimal       @db.Decimal(12,2)
  method      PaymentMethod // reusing the same enum is fine: CASH, CARD, UPI, etc.
  reference   String?
  metadata    Json?
  paidAt      DateTime      @default(now())
}

model Recipe {
  id             String        @id @default(uuid())
  menuItem       MenuItem      @relation(fields: [menuItemId], references: [id])
  menuItemId     String        @unique
  ingredients    Json
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

